<?xml version="1.0" encoding="utf-8"?>
<resources >
    <style name="ScoreButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="minusButton" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_baseline_remove_24</item>
        <item name="contentDescription">minus</item>
    </style>

    <style name="plusButton" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
        <item name="contentDescription">plus</item>
    </style>

    <style name="textAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

</resources>